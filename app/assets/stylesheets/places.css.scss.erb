#places_index {
  .col-xs-12 {
    padding: 0px;
  }

  .alert {
    margin: 0px;
  }

  .header {
    // Navbar overrides starts
    .navbar {
      .navbar-header {
        .navbar-brand {
          padding: 8px 0px 15px 15px;
          img {
            height: 100%;
          }
        }

        // Form style begin
        form {
          width: 80%;
          padding: 5px 2px 5px 8px;
          display: inline-block;

          // Input style begin
          input {
            height: 40px;
            font-size: 18px;
            font-weight: 400;
            border-radius: 5px;
            color: #fff;
            border: 2px solid #171717;
            /* Attach a search icon to the background of the text box */
            background: #4C4C4C url(<%= asset_path 'search.png' %>) center left no-repeat;
            background-size: 12%;
            padding-left:35px;

            &:focus, &:active {
              font-weight: 200;
              border: 1px solid #171717;
              box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(203, 203, 203, 0.6);
            }

            &::-webkit-input-placeholder { /* WebKit browsers */
                color: #D0CECD;
            }
            &:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
                color: #D0CECD;
                opacity: 1;
            }
            &::-moz-placeholder { /* Mozilla Firefox 19+ */
                color: #D0CECD;
                opacity: 1;
            }
            &:-ms-input-placeholder { /* Internet Explorer 10+ */
                color: #D0CECD;
            }
          }
          // Input style ends

        }
        // From style ends

      }
    }
  }
  // Navbar override ends

  .content {
    background-color: #E8E8E8;
    position: relative;
    top: 50px;
    width: 100%;

    .list-group {
      padding: 0px;
      margin: 0px;
      .list-group-item {
        border-radius: 0px;
        background-color: #E8E8E8;
        border-color:#BBBBBB;
        border-right: 0px;
        border-left: 0px;
        padding: 8px 15px 5px 25px;

        h4 {
          margin: 0px;
          font-weight: 400;
          font-size: 22px;
        }

        a{
          color: #E60000;
          &:hover {
            text-decoration: none;
          }
        }

        span {
          color: #9F9F9F;
          font-size: 12px;
        }

        &:last-child {
          border-bottom: 0px;
        }
      }
    }
  }

}

/* Places show screen styles */

#places_show{
  background-color: #E8E8E8;
  min-height: 100vh;
  .col-xs-12 {
    padding: 0px;
  }

  .header {
    height: 160px;
    margin-bottom: 10px;
    padding-bottom: 10px;

    h2 {
      margin: 0px;
      color: #fff;
      font-weight: 600;
      font-size: 22px;
      text-shadow: 2px 2px 2px #333;
    }
    p {
      color: #fff;
      margin: 0px;
      font-size: 14px;
      font-weight: 400;
      text-shadow: 2px 2px 1px #333;
    }
    .col-xs-12 {
      &:first-of-type {
        padding: 0px;
        clear: both;
      }

      &:last-of-type {
        height: 60%;
        padding: 10px;
        margin-top: 8px;
        box-shadow: 0 -52px 50px rgba(141, 141, 141, 0.7)inset;
      }

      .back-link {
        padding: 0px 15px 0px 8px;
        color: #F30000;
        border: 0px;
        background: none;
        text-shadow: 2px 2px 2px #8E8E8E;
        &:hover, &:active, &:focus {
          border: 0px;
          color: #D32;
          box-shadow: none;
        }

        i {
          font-size: 62px;
        }
      }
    }

  }

  .content {
    background-color: #E8E8E8;
    h4.heading {
      text-transform: uppercase;
      text-decoration: underline;
      text-align: center;
      color: #424141;
      font-weight: 400;
      margin-top: 2px;
    }

    .nav-tabs {
      padding: 0px 10px;
      border: 0px;
      li {
        a{
          margin-bottom: 10px;
          padding: 2px 15px;
          border-color: #B4B4B4;
          background-color: #D8D8D8;
          color: #181619;
          margin-right: 10px;
          border-radius: 5px;
          font-size: 16px;
          font-weight: 300;
        }

        &.active a {
          background-color: #F30000;
          color: #fff;
        }
      }
    }

    .tab-content {
      .tab-pane {
        padding: 0px 10px 30px 10px;
        .row {
          margin: 0px;
          width: 100%;
        }


        .item {
          border: 1px solid #AAAAAA;
          border-radius: 2px;
          padding:8px 0px 0px;
          margin-bottom: 4px;
          background-color: #FFF;

          .col-xs-10 {
            padding: 5px 0px;

            p {
              display: block;
              width: 100%;
              color: #4A4A4A;
            }
          }
          .name {
            float: left;
            margin: 0px;
            font-size: 18px;
            font-weight: 600;

            span.price {
              font-size: 14px;
              padding-left: 12px;
              font-weight: 300;
            }

            span.desc {
              padding-left: 8px;
              padding-top: 5px;
              a {
                &.less { display: none;}
                font-weight: 400;
                font-size: 12px;
                color: #F30000;
                &:hover {
                  cursor: pointer;
                  text-decoration: none;
                }
              }
            }
          }


          .price {
            font-size: 16px;
            .muted {
              font-size: 12px;
              color: #B0B0B0;
            }
          }


          .col-xs-2 {
            text-align: center;
            padding-left: 0px;
            padding-bottom: 10px;
            p {
              margin: 0px;
              display: inline;
              img {
                display: inline;
                &.like {height: 25px;}
                &.unlike {height: 25px;}
              }
            }

            .like_it {
              position: absolute;
              top: 0px;
              i.fa {
                font-size: 25px;
                margin-top: 5px;
                color: #7D7D7D;
              }
            }

            .votes {
              position: absolute;
              left: 0px;
              top: 5px;
              //padding-bottom: 10px;
              color: #4A4A4A;
              font-weight: 400;
              font-size: 18px;
              color: #F30000;
              span {
                color: #4A4A4A;
                font-weight: 200;
              }
            }
          }

          .item_desc {
            display: none;
            padding: 5px 0px 0px;

            -webkit-transition: .125s linear;
            -moz-transition: .125s linear;
            -ms-transition: .125s linear;
            -o-transition: .125s linear;
            transition: .125s linear;

            .desc {
              margin: 0px;
              font-size: 14px;
              font-weight: 300;
            }
          }

          .col-xs-12 {
            width: 94%;
            margin: 0px 10px;


            &:last-child{
              padding-bottom: 8px;
            }
          }

          .fb_info {
            margin: 0px 10px;
            padding: 6px 0px 0px;
            .friend_likes {
              margin: 0px;
              font-size: 14px;
              font-weight: 300;
              color: #979797;
              img.fb-pic {
                height: 35px;
                width: 35px;
                border: 1px solid #B0B0B0;
                margin-right: 1px;
              }
            }
          }


        }

      }
    }

  }
}
