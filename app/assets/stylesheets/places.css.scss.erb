#places_index {
  .col-xs-12 {
    padding: 0px;
  }

  #places {
    .navbar-inverse {
      border: 0px;
    }
  }

  .alert {
    margin: 0px;
  }

  .header {
    // Navbar overrides starts
    .navbar {
      .navbar-header {
        .navbar-brand {
          padding: 8px 0px 15px 15px;
          img {
            height: 100%;
          }
        }

        .userpic {
          display: inline;
          &:hover {
            cursor: pointer;
          }
          a {
            color: #fff;
            &:hover {
              text-decoration: none;
            }
          }
          img {
            width: 38px;
            height: 38px;
            border-radius: 3px;
            border: 2px solid #fff;
            margin-top: -5px;
          }
          ul.dropdown-menu {
            left: initial;
            right: -5px;
            top: 32px;
            border-top-left-radius: 0px;
            border-top-right-radius: 0px;
            background-color: #222;
            border: 0px;

            a:hover {
              background-color: #ddd;
              color: #222;
            }
          }
        }

        // Form style begin
        form {
          width: 66%;
          padding: 5px 2px 5px 8px;
          display: inline-block;

          // Input style begin
          input {
            height: 40px;
            font-size: 18px;
            font-weight: 400;
            border-radius: 5px;
            color: #fff;
            border: 2px solid #171717;
            /* Attach a search icon to the background of the text box */
            background: #4C4C4C url(<%= asset_path 'search.png' %>) center left no-repeat;
            background-size: 12%;
            padding-left:35px;

            &:focus, &:active {
              font-weight: 200;
              border: 1px solid #171717;
              box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(203, 203, 203, 0.6);
            }

            &::-webkit-input-placeholder { /* WebKit browsers */
                color: #D0CECD;
            }
            &:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
                color: #D0CECD;
                opacity: 1;
            }
            &::-moz-placeholder { /* Mozilla Firefox 19+ */
                color: #D0CECD;
                opacity: 1;
            }
            &:-ms-input-placeholder { /* Internet Explorer 10+ */
                color: #D0CECD;
            }
          }
          // Input style ends

        }
        // From style ends

      }
    }
  }
  // Navbar override ends

  .content {
    background-color: #E8E8E8;
    position: relative;
    top: 50px;
    width: 100%;

    .list-group {
      padding: 0px;
      margin: 0px;
      .list-group-item {
        border-radius: 0px;
        background-color: #E8E8E8;
        border-color:#BBBBBB;
        border-right: 0px;
        border-left: 0px;
        padding: 8px 15px 5px 25px;

        h4 {
          margin: 0px;
          font-weight: 400;
          font-size: 22px;
        }

        a{
          color: #E60000;
          &:hover {
            text-decoration: none;
          }
        }

        span {
          color: #9F9F9F;
          font-size: 12px;
        }

        &:last-child {
          border-bottom: 0px;
        }
      }
    }
  }

}

/* Places show screen styles */

#places_show{
  background-color: #E8E8E8;
  min-height: 100vh;

  .col-xs-12 {
    padding: 0px;
  }

  .header {
    height: 140px;
    margin-bottom: 10px;
    padding-bottom: 10px;

    h2 {
      margin: 0px;
      color: #fff;
      font-weight: 400;
      font-size: 22px;
      text-shadow: 2px 2px 2px #000;
    }

    p {
      color: #fff;
      margin: 0px;
      font-size: 14px;
      font-weight: 400;
      text-shadow: 2px 2px 1px #000;
      a {
        color: #fff;
        text-decoration: none;
      }
    }

    .col-xs-12 {
      &:first-of-type {
        padding: 0px;
        clear: both;
      }

      &:last-of-type {
        height: 60%;
        padding: 10px;
        margin-top: 8px;
        //box-shadow: 0 -62px 60px rgba(141, 141, 141, 0.7)inset;
      }
    }

  }

  .back-link {
    padding: 0px 15px 0px 8px;
    color: #F30000;
    border: 0px;
    background: none;
    text-shadow: 2px 2px 2px #8E8E8E;
    &:hover, &:active, &:focus {
      border: 0px;
      color: #D32;
      box-shadow: none;
    }

    i {
      font-size: 50px;
    }
  }

  .content {
    background-color: #E8E8E8;
    h4.heading {
      text-transform: uppercase;
      text-decoration: underline;
      text-align: center;
      color: #424141;
      font-weight: 300;
      margin-top: 2px;
    }
  }

  .nav-tabs {
    margin: 0px 10px;
    border: 0px;
    border-bottom: 1px solid #a5a5a5;
    li {
      padding: 0px 3px;
      a{
        margin-bottom: 10px;
        padding: 4px 8px;
        border-color: #B4B4B4;
        background-color: #D8D8D8;
        color: #181619;
        border-radius: 3px;
        font-size: 14px;
        font-weight: 400;
        box-shadow: #c5c5c5 1px 1px 1px 0px;

        span.fa {
          display: none;
          position: absolute;
          left: 40%;
          color: #a5a5a5;
          font-size: 28px;
          top: 72%;
        }

        &[href='#top5'] {
          i {
            color: #333;
            font-size: 16px;
          }
          span {
            left: 25%;
          }
        }

      }

      &.active a {
        background-color: #F30000;
        color: #fff;

        &[href='#top5'] i {
          color: #fff;
        }

        span {
          display: inline-block;
        }
      }
    }
  }

  .tab-pane {
    padding: 0px 10px 30px 10px;
    .row {
      margin: 0px;
      width: 100%;
    }

    .tab-header {
      font-size: 16px;
      text-align: center;
      color: #333;
    }
  }

  .item {
    border: 1px solid #AAAAAA;
    border-radius: 3px;
    padding:8px 0 4px;
    margin-bottom: 4px;
    background-color: #FFF;

    .col-xs-8 {
      padding: 0 0 5px 12px;
    }

    .col-xs-1 {
      padding: 0 0 0 8px;
    }

    p {
      color: #4A4A4A;

      &.name {
        margin: 0px;
        font-size: 15px;
        font-weight: 600;

        span.price {
          font-size: 11px;
          padding-left: 5px;
          color: #7E7E7E;
          font-weight: normal;

          i {
            font-size: 9px;
          }
        }
      }

      &.votes {
        width: 90%;
        display: inline-block;
        color: #F10000;
        text-align: center;
        position: absolute;
        font-size: 8px;
        font-weight: 400;
        span {
          font-weight: 600;
          font-size: 14px;
          padding: 1px 0;
          color: #fff;
          display: block;
          border-radius: 4px;
          background-color: #F10000;
        }
      }

      &.like_it {
        margin-bottom: 6px;
      }

      span.desc {
        padding-left: 4px;
        padding-top: 5px;

        a {
          font-weight: 400;
          font-size: 9px;
          color: #F30000;
          &.less {
            display: none;
          }
          &:hover {
            cursor: pointer;
            text-decoration: none;
          }
        }
      }


    }


    .col-xs-3 {
      text-align: center;
      padding: 2px 0 0;
    }

    .btn {
      padding: 2px 8px;
      min-width: 70px;
      background-color: #f8f5f5;
      box-shadow: #c5c5c5 1px 1px 1px 0px;
      border-radius: 3px;

      &.like {
        border-color: #9B9B9B;
        color: #333;
      }

      &.unlike {
        background-color: #fff;
        border-color: #F30000;
        color: #F30000;
      }
    }


  }
    .no-tags {
      margin-top: 10px;
    }

  .item_desc {
    display: none;
    padding: 5px 0;

    p {
      margin: 0;
      padding: 0 10px;
      font-size: 12px;
      font-weight: 300;
    }
  }

  .fb_info {
    padding: 6px 8px;
  }

  .friend_likes {
    margin: 0;
    font-size: 12px;
    font-weight: 400;
    color: #BCBCBC;

    img.fb-pic {
      height: 32px;
      width: 32px;
      border: 1px solid #B0B0B0;
      margin-right: 1px;
    }
  }

  .tab-pane {
    &#top5 {
      .winner {
        text-align: center;
        font-size: 16px;
        font-weight: bold;
        color: #5C5C5C;
      }
    }

    .nav-tabs {
      padding: 10px 0 5px;
      border: 0;
      margin: 0;

      li {
        &.active a {
          &:after {
            content: none;
          }
          background-color: #51914C;
        }
        a {
          background-color: #666666;
          color: #fff;
          padding: 1px 14px;
        }
      }
    }

    .tab-pane {
      padding: 0;
    }
  }

}
