#homePage {
  &:after {
    content: '';
    background: linear-gradient(rgba(1, 0, 0, 0.75),rgba(1, 0, 0, 0.75)),url(<%= asset_path 'bg.png' %>) no-repeat 0 0;
    background-size: cover;
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    z-index: -1;
  }

  .header {
    .logo {
      margin-top: 5%;
      width: 45%;
    }
  }

  .content {
    text-align: center;
    margin-top: 41%;

    .tagline {
      h1 {
        font-weight: 100;
        color: #fff;
      }
    }

    .loginButton {
      margin-top: 40px;
      padding: 0px 12px;
      .btn {
        font-size: 28px;
        font-weight: 100;
        height: 60px;
        padding-top: 8px;
        background-color: #374F92;
        border-color: #374F92;
        color: #F8F8F8;
        span {
          font-weight: 500;
          font-size: 28px;
        }

        &:hover {
          background-color: #374F80;
          border-color: #374F80;
        }
      }
    }
  }
}


