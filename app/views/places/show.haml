- model_class = Place
.page-header
  %h1=t '.title', :default => Place
.fieldset
  %dl
    %dt.label.label-default= model_class.human_attribute_name(:name)
    %dd
      %pre.prettyprint= @place.name

#items
  %h3 Items
  = link_to 'Add Item', new_place_item_path(@place)
  - @place.items.each do |item|
    .item
      %span.name=item.name

.form-group
  = link_to 'Back', places_path, :class => 'btn btn-default'
  = link_to 'Edit', edit_place_path(@place), :class => 'btn btn-default'
  = link_to 'Destroy', place_path(@place), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

