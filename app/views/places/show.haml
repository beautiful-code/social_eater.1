- model_class = Place
.page-header
  %h1=t '.title', :default => Place
.fieldset
  %dl
    %dt.label.label-default= model_class.human_attribute_name(:name)
    %dd
      %pre.prettyprint= @place.name

#items
  %h3 Items
  - @place.items.each do |item|
    .item
      %span.name="#{item.name} (#{item.votes_for.size})"
      - if current_user.voted_for? item
        %span.like_it
          You liked it
      - else
        = link_to 'I like too', vote_place_item_path(@place,item)

      - friend_likes = current_user.friends_like_item(item)
      - if friend_likes.present?
        %span.friend_likes
          ="#{friend_likes.count} friend likes"
          - friend_likes.each do |friend|
            = image_tag friend.provider_pic

.form-group
  = link_to 'Back', places_path, :class => 'btn btn-default'
