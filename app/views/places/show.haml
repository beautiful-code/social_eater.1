- image_info = @place.image_url(:thumb)

- if image_info.present?
  :scss
    #places_show {
      .header {
        display: block;
        position: relative;

        &::before {
          content: "";
          background: url( #{ image_info });
          -webkit-background-size: cover;
          -moz-background-size: cover;
          -o-background-size: cover;
          background-size: cover;
          top: 0;
          left: 0;
          bottom: 0;
          right: 0;
          position: absolute;
        }
      }
    }

- else
  :scss
    #places_show{
      .header {
        height: 140px;
        background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.65) 100%) repeat scroll 0 0 rgba(0, 0, 0, 0);

        .back-link {
          text-shadow: none !important;
        }

        .col-xs-12:last-of-type {
          margin: 0px;
        }
      }
    }

.row#places_show
  .col-xs-12
    .header
      .col-xs-12
        = link_to places_path, class: 'back-link btn btn-default' do
          %i.fa.fa-angle-left
      .col-xs-12
        %h2=@place.name
        %span
          - if @place.short_address.present?
            %i.fa.fa-map-marker
            = @place.short_address

    .content
      %ul.nav.nav-tabs{:role => "tablist"}
        %li.active
          %a{"data-toggle" => "tab", :href => "#top5", :role => "tab"} Top 5
        - @place.populated_categories.each do |category|
          %li
            %a{"data-toggle" => "tab", :href => "##{category.id}", :role => "tab"}
              = category.name
        - if @place.uncategorized_items.present?
          %li
            %a{"data-toggle" => "tab", :href => "#uncategorized", :role => "tab"} Uncategorized

      .tab-content
        #top5.tab-pane.fade.in.active
          /%h4.heading Top Dishes
          - @place.top(5).each do |item|
            .row
              = render 'item',item: item

        - @place.ordered_items.each do |cat_id, items|
          - category = Category.find(cat_id)
          %div.tab-pane{id: "#{category.id}"}
            /%h4.heading= category.name
            - items.each do |item|
              .row
                = render 'item', item: item

        - if @place.uncategorized_items.present?
          #uncategorized.tab-pane
            /%h4.heading Uncategorized
            - @place.uncategorized_items.each do |item|
              .row
                = render 'item',item: item
