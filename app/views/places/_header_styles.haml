- if image_info.present?
  :scss
    #places_show {
      .header {
        display: block;
        position: relative;

        &::before {
          content: "";
          background: url( #{ image_info });
          -webkit-background-size: cover;
          -moz-background-size: cover;
          -o-background-size: cover;
          background-size: cover;
          top: 0;
          left: 0;
          bottom: 0;
          right: 0;
          position: absolute;
        }
      }
    }

- else
  :scss
    #places_show{
      .header {
        height: 140px;
        background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.65) 100%) repeat scroll 0 0 rgba(0, 0, 0, 0);

        .back-link {
          text-shadow: none !important;
        }

        .col-xs-12:last-of-type {
          margin: 0px;
        }
      }
    }
