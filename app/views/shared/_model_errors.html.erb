<% if model.errors.any? %>
  <div class="row-fluid">
    <div class="col-xs-11">
      <div id="error_explanation">
        <h2>
          <%= "#{pluralize(model.errors.count, "error")} prohibited this #{model.class.name} from being saved:" %>
        </h2>
        <ul>
          <% model.errors.full_messages.each do |msg| %>
            <li>
              <%= msg %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>

