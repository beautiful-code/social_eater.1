= form_for [:admin, @place, @category], :html => { :class => 'form-horizontal form-model' } do |f|
  - if @category.errors.any?
    #error_explanation
      %h2
        =pluralize(@category.errors.count, "error") 
        prohibited this category from being saved:
      %ul
        - @category.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name, :class => 'control-label col-md-2'
    .col-md-10
      = f.text_field :name, :class => 'text-field form-control'

  .form-group
    = f.label :position, :class => 'control-label col-md-2'
    .col-md-10
      = f.text_field :position, :class => 'text-field form-control'

  .form-group
    = f.label :cold_votes, :class => 'control-label col-md-2'
    .col-md-10
      = f.text_field :cold_votes, :class => 'text-field form-control'

  = hidden_field :category, :place_id, :value => @place.id

  .form-group
    .col-md-offset-2.col-md-10
      = f.submit nil, :class => 'btn btn-primary'
      = link_to 'Cancel', [:admin,@place], :class => 'btn btn-default'
