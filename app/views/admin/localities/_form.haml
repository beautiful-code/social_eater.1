= form_for [:admin, @locality], :html => { :class => 'form-horizontal form-model' } do |f|
  - if @locality.errors.any?
    #error_explanation
      %h2
        =pluralize(@locality.errors.count, "error")
        prohibited this locality from being saved:
      %ul
        - @locality.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :area_name, :class => 'control-label col-md-2'
    .col-md-10
      = f.text_field :area_name, :class => 'text-field form-control'

  .form-group
    = f.label :city, :class => 'control-label col-md-2'
    .col-md-10
      = f.text_field :city, :class => 'text-field form-control'

  .form-group
    = f.label 'latlon','Latitude, Longitude', :class => 'control-label col-md-2'
    .col-md-10
      .col-xs-6.row
        = f.text_field :latitude, :class => 'text-field form-control', :placeholder => 'Latitude', :autocomplete => 'off'
      .col-md-6
        = f.text_field :longitude, :class => 'text-field form-control', :placeholder => 'Longitude', :autocomplete => 'off'


  .form-group
    .col-md-offset-2.col-md-10
      = f.submit nil, :class => 'btn btn-primary'
      = link_to 'Cancel', [:admin,:localities], :class => 'btn btn-default'
