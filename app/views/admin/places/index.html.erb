<%- model_class = Place -%>
<div class="page-header">
  <h1><%=t '.title', :default => Place %></h1>
</div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            [:new,:admin,:place],
            :class => 'btn btn-primary' %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th>Lat,Long</th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.id %></td>
        <td><%= link_to(place.name,[:admin,place]) %></td>
        <td><%= "#{place.latitude}, #{place.longitude}" %>
        <td><%=l place.created_at, format: :long %></td>
        <td>
          <%= link_to [:admin,place], :class => 'btn btn-xs', :title => "#{ t('.show',:default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to [:admin,place], :method => :delete, :data => { :confirm => t('.confirm',
                                                                        :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            [:new,:admin,:place],
            :class => 'btn btn-primary' %>
