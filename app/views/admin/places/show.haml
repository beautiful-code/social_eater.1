- model_class = Place
.page-header
  %h1=t '.title', :default => Place
.fieldset
  %dl
    %dt.label.label-default= model_class.human_attribute_name(:name)
    %dd
      %pre.prettyprint= @place.name

#items
  %h3 Items
  = link_to 'Add Item', [:new,:admin,@place,:item]
  - @place.items.each do |item|
    .item
      %span.name="#{item.name} (#{item.votes_for.size})"
      %span.name
        = link_to [:edit,:admin,@place,item], :class => 'btn btn-xs', :title => "#{ t('.show',
        :default => t('helpers.links.show')) }" do
          = glyph 'pencil'
        = link_to [:admin,@place,item], :class => 'btn btn-xs',method: :delete, :title => "#{ t('.show',
        :default => t('helpers.links.show')) }" do
          = glyph 'remove'






.form-group
  = link_to 'Back', [:admin,:places], :class => 'btn btn-default'
  = link_to 'Edit', [:edit,:admin,@place], :class => 'btn btn-default'
  = link_to 'Destroy', [:admin,@place], :method => 'delete', :data => { :confirm => t('.confirm',
  :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

